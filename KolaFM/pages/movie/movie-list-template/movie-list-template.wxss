@import "../movie-template/movie-template.wxss";

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.inner-container{
    margin: 0  auto 20rpx;
}

.movie-head {
  padding: 30rpx 20rpx 42rpx;
  margin-bottom: 10rpx;
}

.slogan {
  font-size: 24rpx;
  color:#555;
  font-weight: 700;
}

.more {
  float: right;
}

.more-text {
  font-size:25rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  color: #555;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-container{
    display:flex;
    flex-direction: row;
}