
.articlelist{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top:1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding: 10px;
}

.author-time{
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}

.authoricon{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.author-name{
    color:#555;
    font-family:monospace;
    margin-left: 20rpx;
}

.time{
    color:#666;
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}

.title{
    font-size: 34rpx;
    font-weight: 700;
    color:#666;
    margin-bottom: 10px;
    font-family:serif;
}

.articleimg{
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15px;
}

.articletext{
    color:#666;
    font-size: 26rpx;
    margin-bottom: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.article-like{
    font-size: 14px;
    color:#888;
    flex-direction: row;
    line-height: 16px;
}

.article-like-icon{
    height: 26rpx;
    width: 26rpx;
    margin-right: 8rpx;
    vertical-align: middle;
}
.collect_icon{
    height:24rpx;
    width:24rpx;
}
.article-like-text{
    vertical-align: middle;
    margin-right: 20rpx;
}