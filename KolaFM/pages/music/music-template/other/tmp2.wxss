.zhuanlan .items {
  display: flex;
  margin: 20rpx 0;
  width: 100%;
  background-color: #eee;
}

.zhuanlan .items .item {
  flex: 1;
  max-height: 250rpx;
  min-height: 150rpx;
  height: 200rpx;
}

.zhuanlan .item image {
  width: 100%;
  height: 100%;
}

.zhuanlan .txt-item {
  font-size: 30rpx;
  color: #666;
  padding: 0 10px;
  min-width: 50%;
  max-width: 70%;
  width: 650rpx;
  position: relative;
  top: 50%;
  transform: translateY(25%);
}

.num {
  color: #999;
  font-size: 27rpx;
  margin-top: 20rpx;
}
